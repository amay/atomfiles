# Your snippets
#
# Atom snippets allow you to enter a simple prefix in the editor and hit tab to
# expand the prefix into a larger code block with templated values.
#
# You can create a new snippet in this file by typing "snip" and then hitting
# tab.
#
# An example CoffeeScript snippet to expand log to console.log:
#
# '.source.coffee':
#   'Console log':
#     'prefix': 'log'
#     'body': 'console.log $1'
#
# This file uses CoffeeScript Object Notation (CSON).
# If you are unfamiliar with CSON, you can read more about it here:
# https://github.com/bevry/cson#what-is-cson

'.source.js':
  'Mocha Describe':
    'prefix': 'des'
    'body': 'describe(\'$1\', () => {\n  $2\n});'
  'Mocha Context':
    'prefix': 'con'
    'body': 'context(\'$1\', () => {\n  $2\n});'
  'Mocha It':
    'prefix': 'it'
    'body': 'it(\'$1\', () => {\n  $2\n});'
  'Mocha beforeEach':
    'prefix': 'bef'
    'body': 'beforeEach((${1:done}) => {\n  $2\n});'
  'Mocha afterEach':
    'prefix': 'aft'
    'body': 'afterEach((${1:done}) => {\n  $2\n});'
  'React Component: POC':
    'prefix': 'rcom'
    'body': """
    import React, { PropTypes } from \'react\'

    export default class $1 extends React.Component {
      static propTypes = {
        $2
      };

      render () {
        return null
      }
    }
    """
  'React Component Spec: POC':
    'prefix': 'rcoms'
    'body': """
    import React from \'react\'

    import $1 from \'src/components/$1\'

    describe(\'$1\', () => {
      it('renders', () => {
        const component = render()
        expect(component).to.not.be.null
      })

      function render (props = {}) {
        return shallowRender(<$1 {...props} />)
      }
    })
    """

#
# Unity / C-Sharp snippets
