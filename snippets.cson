'.source.cs':
  'MonoBehaviour' :
    'prefix': 'mono'
    'body': """
    using UnityEngine;
    using System;
    using System.Collections.Generic;
    using System.Linq;

    public class $1 : MonoBehaviour {
      $2
    }
    """
